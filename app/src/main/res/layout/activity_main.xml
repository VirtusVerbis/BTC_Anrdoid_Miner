<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dashboard_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center" />

            <LinearLayout
                android:id="@+id/auto_tune_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/auto_tune_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/auto_tune_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/auto_tune_on"
                    android:textSize="9.6sp"
                    android:textColor="?attr/colorOnSurface" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.4dp"
            android:text="@string/config_title"
            android:textColor="@color/black"
            app:backgroundTint="@color/bitcoin_orange" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_start_mining"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/mining_start"
                android:textColor="@color/black"
                app:backgroundTint="@color/bitcoin_orange" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_stop_mining"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/mining_stop"
                android:textColor="@color/black"
                app:backgroundTint="@color/bitcoin_orange" />
        </LinearLayout>

        <TextView
            android:id="@+id/wallet_balance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.8dp"
            android:layout_gravity="center_horizontal"
            android:text="—"
            android:textColor="@color/bitcoin_orange"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/wallet_balance_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/wallet_balance_tor_note"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/hash_rate_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00 H/s"
                android:textColor="@color/bitcoin_orange"
                android:textSize="28sp" />

            <ImageView
                android:id="@+id/stratum_connection_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/stratum_connection_icon_content_description"
                android:src="@drawable/ic_stratum_wifi" />

        </LinearLayout>

        <TextView
            android:id="@+id/hash_rate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/hash_rate_label"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp" />

        <!-- Row: Battery Temp | GPU Hash Rate (30% | 70%, same font size) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:orientation="vertical"
                android:gravity="end">
                <TextView
                    android:id="@+id/battery_temp_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="—"
                    android:textColor="@color/bitcoin_orange"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/battery_temp_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/battery_temp_label"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/gpu_hash_rate_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0.00 H/s"
                    android:textColor="@color/bitcoin_orange"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/gpu_hash_rate_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/hash_rate_gpu_label"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row: Nonces | Mining Timer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/nonces_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textColor="@color/bitcoin_orange"
                    android:textSize="18sp"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="10sp"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeStepGranularity="1sp" />
                <TextView
                    android:id="@+id/nonces_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nonces_label"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="10.8sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/mining_timer_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00:00"
                    android:textColor="@color/bitcoin_orange"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/mining_timer_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mining_timer_label"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row: Accepted Shares | Rejected Shares | Identified Shares -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/accepted_shares_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/bitcoin_orange"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/accepted_shares_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accepted_shares_label"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="9sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/rejected_shares_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/bitcoin_orange"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/rejected_shares_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rejected_shares_label"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="9sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/identified_shares_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/bitcoin_orange"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/identified_shares_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/identified_shares_label"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="9sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row: CPU Util % | Best Difficulty | Block Template -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/cpu_utilization_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="—"
                    android:textColor="@color/bitcoin_orange"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/cpu_utilization_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cpu_utilization_label"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/best_difficulty_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="—"
                    android:textColor="@color/bitcoin_orange"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/best_difficulty_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/best_difficulty_label"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="9sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/block_template_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="—"
                    android:textColor="@color/bitcoin_orange"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/block_template_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/block_template_label"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="9sp" />
            </LinearLayout>
        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/hash_rate_chart"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="24dp" />
    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/reconnecting_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/bitcoin_orange"
        android:padding="12dp"
        android:gravity="center"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mining_reconnecting"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>
